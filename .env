# Variáveis de Ambiente — API (.env)

# Porta e ambiente
NODE_ENV=development
PORT=8000
TZ=America/Sao_Paulo

# JWT (somente para desenvolvimento local)
JWT_SECRET=dev-secret-change-me-local-2026
JWT_REFRESH_SECRET=dev-refresh-secret-change-me-local-2026
SESSION_TIMEOUT=8h

# Frontend local
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:8000,http://127.0.0.1:8000

# MySQL - Local (configuração para desenvolvimento)
# MySQL configurado e rodando
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=prescrimed

# PostgreSQL - Local (usando SQLite em memória para testes rápidos)
# Se quiser usar PostgreSQL local, descomente e configure:
# PGHOST=localhost
# PGPORT=5432
# PGUSER=postgres
# PGPASSWORD=postgres
# PGDATABASE=prescrimed
