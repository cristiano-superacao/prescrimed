{
  "name": "prescrimed-system",
  "version": "1.0.0",
  "description": "Sistema Prescrimed - Gestão de Prescrições Médicas Multi-tenant",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.js",
    "server": "node server.js",
    "start": "node server.js",
    "railway:build": "npm install --production=false && cd client && npm install && npm run build:railway",
    "railway:start": "node server.js",
    "seed:demo": "node scripts/seed-demo-data.js",
    "seed:minimal": "node scripts/seed-minimal-demo.js",
    "seed:complete": "node scripts/seed-complete-data.js",
    "create:superadmin": "node scripts/create-superadmin.js",
    "rebuild:db": "node scripts/rebuild-database.js",
    "smoke:api": "node scripts/smoke-api-flow.js",
    "test:api:complete": "node scripts/test-complete-api.js",
    "seed:roles": "node scripts/seed-company-role-users.js",
    "test:roles": "node scripts/test-resident-role-access.js",
    "sanity:rules": "node scripts/sanity-rules-check.js",
    "check:railway": "node scripts/check-railway-config.js",
    "predeploy:check": "node scripts/predeploy-check.js",
    "predeploy": "npm run predeploy:check && npm run railway:build",
    "deploy:railway": "npm run predeploy:check && npm run railway:start",
    "reset:local": "scripts\\reset-local-config.bat",
    "reset:local:ps": "powershell -ExecutionPolicy Bypass -File scripts/reset-local-config.ps1",
    "client": "cd client && npm run dev",
    "build:client": "cd client && npm install && npm run build",
    "build:pages": "cd client && npm install && npm run build:github",
    "pages:publish": "node scripts/publish-pages.js",
    "build:full": "npm install --production=false && cd client && npm install && npm run build && cd ..",
    "build": "cd client && npm install && npm run build",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "deploy": "node deploy.js",
    "check:health": "node scripts/check-health.js",
    "streamlit": "cd streamlit-app && streamlit run app.py",
    "streamlit:install": "cd streamlit-app && pip install -r requirements.txt",
    "dev:all": "concurrently \"npm run dev\" \"npm run client\" \"npm run streamlit\"",
    "smoke:railway": "node scripts/smoke-railway.mjs",
    "export:mysql": "node scripts/export-mysql-data.js",
    "import:railway": "node scripts/import-json-to-railway.js",
    "db:migrate:railway": "powershell -ExecutionPolicy Bypass -File scripts/migrate-local-to-railway.ps1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "keywords": [
    "prescrimed",
    "medical",
    "prescription",
    "multi-tenant"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.16.1",
    "pg": "^8.17.2",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "sqlite3": "^5.0.2"
  }
}
