{
  "name": "prescrimed-system",
  "version": "1.0.0",
  "description": "Sistema Prescrimed - Gestão de Prescrições Médicas Multi-tenant",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.js",
    "server": "node server.js",
    "start": "node server.js",
    "railway:build": "npm install --production=false && cd client && npm install && npm run build",
    "railway:start": "node server.js",
    "seed:demo": "node scripts/seed-demo-data.js",
    "reset:local": "scripts\\reset-local-config.bat",
    "reset:local:ps": "powershell -ExecutionPolicy Bypass -File scripts/reset-local-config.ps1",
    "client": "cd client && npm run dev",
    "build:client": "cd client && npm install && npm run build",
    "build:full": "npm install --production=false && cd client && npm install && npm run build && cd ..",
    "build": "cd client && npm install && npm run build",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "deploy": "node deploy.js",
    "check:health": "node scripts/check-health.js"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "prescrimed",
    "medical",
    "prescription",
    "multi-tenant"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.17.1",
    "sequelize": "^6.37.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "sqlite3": "^5.1.7"
  }
}
