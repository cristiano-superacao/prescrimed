# Ambiente de produção Locaweb (MySQL)
NODE_ENV=production
TZ=America/Sao_Paulo

# MySQL (preencha com os dados do painel Locaweb)
MYSQL_HOST=seu_host_mysql
MYSQL_PORT=3306
MYSQL_DATABASE=prescrimed
MYSQL_USER=seu_usuario
MYSQL_PASSWORD=sua_senha
# Alternativamente, pode usar MYSQL_URL=mysql://usuario:senha@host:3306/prescrimed

# JWT (gere segredos fortes para produção)
JWT_SECRET=defina_um_segredo_forte
JWT_REFRESH_SECRET=defina_um_refresh_segredo
SESSION_TIMEOUT=8h

# CORS
ALLOWED_ORIGINS=https://seu-dominio.com.br

# Outras variáveis conforme necessário
# FRONTEND_URL=https://seu-dominio.com.br
# FORCE_RECREATE=true  # Use apenas para forçar a recriação das tabelas
